<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="UmbrellaMakeableBase" Name="Umbrella">
    <defName>Umbrella</defName>
    <label>umbrella</label>
    <description>An umbrella: a cloth covering on a stick. Keeps colonists underneath it dry.</description>
    <graphicData>
      <texPath>Umbrella/Umbrella</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>25</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>1800</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
      <wornGraphicPath>Umbrella/Umbrella</wornGraphicPath>
      <layers>
		<li>Overhead</li>
      </layers>
      <tags>
        <li>Neolithic</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_StandardApparel" />
  </ThingDef>

<ThingDef ParentName="UmbrellaMakeableBase" Name="Parasol">
    <defName>Parasol</defName>
    <label>parasol</label>
    <description>A decorative umbrella that provides a small social impact.</description>
    <recipeMaker>
      <researchPrerequisite>ComplexClothing</researchPrerequisite>
    </recipeMaker>
    <graphicData>
      <texPath>Parasol/Parasol</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <costStuffCount>35</costStuffCount>
    <stuffCategories>
      <li>Fabric</li>
      <li>Leathery</li>
    </stuffCategories>
    <statBases>
      <WorkToMake>3600</WorkToMake>
      <Mass>1</Mass>
      <StuffEffectMultiplierArmor>0.1</StuffEffectMultiplierArmor>
      <EquipDelay>1.5</EquipDelay>
    </statBases>
    <apparel>
      <bodyPartGroups>
        <li>Hands</li>
      </bodyPartGroups>
      <wornGraphicPath>Parasol/Parasol</wornGraphicPath>
      <layers>
		<li>Overhead</li>
      </layers>
      <tags>
        <li>Medieval</li>
      </tags>
      <defaultOutfitTags>
        <li>Worker</li>
      </defaultOutfitTags>
    </apparel>
    <colorGenerator Class="ColorGenerator_Options">
      <options>
        <li>
          <weight>100</weight>
          <min>(0.5,0.5,0.5,1)</min>
          <max>(1.0,1.0,1.0,1)</max>
        </li>
      </options>
    </colorGenerator>
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>NamerArtFurniture</nameMaker>
        <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
        <minQualityForArtistic>Normal</minQualityForArtistic>
      </li>
    </comps>
    <equippedStatOffsets>
      <SocialImpact>0.10</SocialImpact>
    </equippedStatOffsets>
  </ThingDef>

